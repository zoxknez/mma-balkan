# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mma_balkan?schema=public"

# Server
PORT=3003
NODE_ENV=development

# CORS
ORIGIN="http://localhost:3002"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-characters-long"
JWT_ACCESS_TOKEN_EXPIRES_IN="15m"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-distinct-refresh-secret-change-me-now"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
ALLOWED_ORIGINS="http://localhost:3002,http://localhost:3000"

# Security
BCRYPT_ROUNDS=10

# OAuth (optional, same as frontend)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_ID=""
GITHUB_SECRET=""

# Monitoring (optional)
SENTRY_DSN=""
PROMETHEUS_PORT=9090

# Email Configuration (optional - for password reset & verification)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@mmabalkan.com"

